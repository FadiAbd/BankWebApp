@model BankWebbApp.ViewModels.WithdrawalViewModel

@{
    ViewData["Title"] = "Withdrawal";
}

<section class="py-5">
    <div class="row">
        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">Withdraw</h3>
                </div>

                <div class="card-body">
                    @using (Html.BeginForm("NewWithdrawal", "Withdrawal", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label asp-for="AccountId">Withdraw from Account: </label>
                            <input class="form-control" asp-for="AccountId" name="AccountId">
                            <span asp-validation-for="AccountId" class="field-validation-error"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Amount">Enter Amount: </label>
                            <input class="form-control" asp-for="Amount" name="Amount">
                            <span asp-validation-for="Amount" class="field-validation-error"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Withdraw</button>
                    }
                </div>

            </div>

        </div>
    </div>
</section>








