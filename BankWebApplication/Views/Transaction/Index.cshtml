@model BankWebbApp.ViewModels.TransactionIndexViewModel

@{ ViewData["Title"] = "Transactions"; }

<section class="py-5">

    <div class="row">
        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h4 text-uppercase mb-0">Transactions</h3>
                </div>
                <div class="card-body">


                    <form method="get" asp-controller="Transaction" asp-action="Index">

                        <div class="form-row align-items-center">
                            <div class="col-auto">
                                <input type="text" class="form-control" asp-for="q">
                            </div>
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary">Search</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>


    <div id="selectTransactionPlaceHolder">

    </div>
  <div class="col-lg-12 mb-5">
    <div class="card">
        <div class="card-header">
            <h3 class="h6 text-uppercase mb-0"></h3>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        
                        <th scope="col">AccountId</th>
                        <th scope="col">Date </th>
                        <th scope="col">Amount</th>
                        <th scope="col">Balance</th>
                        <th scope="col">Bank</th>

                     

                    </tr>
                    @foreach (var transaction in Model.Transactions)
                    {
        <tr>
            <td>@transaction.AccountId</td>
            <td>@transaction.Date</td>
            <td>@transaction.Amount</td>
            <td>@transaction.Balance</td>
            <td>@transaction.Bank</td>
                
            <td><a href="#" onclick="FetchOrderStatus(@transaction.AccountId);return fa.lse;" class="btn btn-secondary active" role="button" aria-pressed="true">Select</a></td>
                @*<td><a asp-controller="Account" asp-action="Edit" asp-route-Id="@acc.AccountId" class="btn btn-secondary active" role="button" aria-pressed="true">Edit</a></td>*@
        </tr>
                     }
                </thead>
                <tbody>
                </tbody>
            </table>
            

        </div>
  </div> 
  </div>
    </section>
