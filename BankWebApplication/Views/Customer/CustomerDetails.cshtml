@model BankWebbApp.ViewModels.CustomerIndexViewModel

@{
    ViewData["Title"] = "CustomerDetails";
}

<h1>CustomerDetails</h1>


<div class="col-lg-12 mb-5">
    <div class="card">
        <div class="card-header">
            <h3 class="h6 text-uppercase mb-0">Customer</h3>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">CustomerId</th>
                        @*<th scope="col">Gender</th>*@
                        <th scope="col">Givenname</th>
                        <th scope="col">Surename</th>
                        <th scope="col">NationalId</th>
                        @*<th scope="col">Streetaddress</th>*@
                        @*<th scope="col">Birthday</th>*@
                        <th scope="col">City</th>
                        @*<th scope="col">Country</th>
                            <th scope="col">CountryCode</th>*@
                        <th scope="col">Emailaddress</th>
                        @*<th scope="col">Telephonecountrycode</th>*@
                        <th scope="col">Telephonenumber</th>
                        @*<th scope="col">Zipcode</th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model.Customers)
                    {
                        <tr>
                            <td>@customer.CustomerId</td>
                            @*<td>@customer.Gender</td>*@
                            <td>@customer.Givenname</td>
                            <td>@customer.Surname</td>
                            <td>@customer.NationalId</td>
                            @*<td>@customer.Streetaddress</td>
                                <td>@customer.Birthday</td>*@
                            <td>@customer.City</td>
                            @*<td>@customer.Country</td>
                                <td>@customer.CountryCode</td>*@
                            <td>@customer.Emailaddress</td>
                            @*<td>@customer.Telephonenumber</td>*@
                            <td>@customer.Telephonenumber</td>
                            @*<td>@customer.Zipcode</td>*@
                            

                        </tr>
                    }

                </tbody>
            </table>


        </div>
    </div>
</div>


<div>

    <a asp-action="Index">Back to List</a>
</div>

